Distancia_Izquierda = sonar.ping(DigitalPin.P8, DigitalPin.P2, PingUnit.CENTIMETERS)
Distancia_Derecha = sonar.ping(DigitalPin.P1, DigitalPin.P0, PingUnit.CENTIMETERS)
pins.digital_write_pin(DigitalPin.P11, 0)
pins.digital_write_pin(DigitalPin.P9, 0)
huskylens.init_i2c()
huskylens.init_mode(protocolAlgorithm.ALGORITHM_COLOR_RECOGNITION)
pins.digital_write_pin(DigitalPin.P9, 0)
pins.digital_write_pin(DigitalPin.P11, 0)
pins.digital_write_pin(DigitalPin.P12, 1)
pins.digital_write_pin(DigitalPin.P13, 0)
pins.analog_write_pin(AnalogPin.P14, 280)

def on_forever():
    global Distancia_Izquierda, Distancia_Derecha
    huskylens.request()
    Distancia_Izquierda = sonar.ping(DigitalPin.P8, DigitalPin.P2, PingUnit.CENTIMETERS)
    Distancia_Derecha = sonar.ping(DigitalPin.P1, DigitalPin.P0, PingUnit.CENTIMETERS)
    if huskylens.is_appear(1, HUSKYLENSResultType_t.HUSKYLENS_RESULT_BLOCK):
        pins.digital_write_pin(DigitalPin.P9, 1)
        pins.digital_write_pin(DigitalPin.P11, 0)
        basic.pause(1000)
    elif huskylens.is_appear(2, HUSKYLENSResultType_t.HUSKYLENS_RESULT_BLOCK):
        pins.digital_write_pin(DigitalPin.P9, 0)
        pins.digital_write_pin(DigitalPin.P11, 1)
        basic.pause(1000)
    else:
        if Distancia_Derecha > 150 or Distancia_Derecha == 0:
            pins.digital_write_pin(DigitalPin.P9, 1)
            pins.digital_write_pin(DigitalPin.P11, 0)
        elif Distancia_Izquierda > 150 or Distancia_Izquierda == 0:
            pins.digital_write_pin(DigitalPin.P9, 0)
            pins.digital_write_pin(DigitalPin.P11, 1)
        elif Distancia_Izquierda > 20 and Distancia_Derecha > 20:
            pins.digital_write_pin(DigitalPin.P9, 0)
            pins.digital_write_pin(DigitalPin.P11, 0)
        elif Distancia_Izquierda < 20 and Distancia_Izquierda > 3:
            pins.digital_write_pin(DigitalPin.P9, 1)
            pins.digital_write_pin(DigitalPin.P11, 0)
            basic.pause(200)
            pins.digital_write_pin(DigitalPin.P9, 0)
            pins.digital_write_pin(DigitalPin.P11, 0)
        elif Distancia_Derecha < 20 and Distancia_Derecha > 3:
            pins.digital_write_pin(DigitalPin.P9, 0)
            pins.digital_write_pin(DigitalPin.P11, 1)
            basic.pause(200)
            pins.digital_write_pin(DigitalPin.P9, 0)
            pins.digital_write_pin(DigitalPin.P11, 0)
        basic.pause(10)
basic.forever(on_forever)

def on_forever2():
    pins.digital_write_pin(DigitalPin.P12, 1)
    pins.digital_write_pin(DigitalPin.P13, 0)
    pins.analog_write_pin(AnalogPin.P14, 240)
    basic.pause(100)
    pins.analog_write_pin(AnalogPin.P14, 200)
    basic.pause(100)
    pins.analog_write_pin(AnalogPin.P14, 190)
    basic.pause(100)
    pins.analog_write_pin(AnalogPin.P14, 220)
    basic.pause(100)
basic.forever(on_forever2)
